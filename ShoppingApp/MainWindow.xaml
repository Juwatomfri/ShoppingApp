<Window x:Class="ShoppingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingApp"
        mc:Ignorable="d"
        Title="ShoppingApp" Height="723" Width="1184">
    <Grid Margin="0,10,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="395*"></ColumnDefinition>
            <ColumnDefinition Width="394*"></ColumnDefinition>
            <ColumnDefinition Width="395*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="Добавить объекты в базу данных" FontSize="20" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,191" Foreground="#04859D" Width="330"/>

        <!-- Кнопка "Добавить магазин" -->
        <Button Margin="0,67,0,112" FontSize="15" FontWeight="SemiBold" Width="374"
            Background="#FF8073" Foreground="Black" Padding="0" BorderBrush="Transparent" Cursor="Hand" Click="Button_Click" HorizontalAlignment="Center">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="20" Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
            Добавить магазин
        </Button>

        <!-- Кнопка "Добавить товар" -->
        <Button Margin="0,127,0,52" FontSize="15" FontWeight="SemiBold" Width="374"
            Background="#FFD373" Foreground="Black" Padding="0" BorderBrush="Transparent" Cursor="Hand" Click="Button_Click" HorizontalAlignment="Center">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="20" Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
            Добавить товар
        </Button>

